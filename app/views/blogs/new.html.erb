<div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 text-center">

<form>
<%= form_for @blog, :html => {:class => "form-horizontal"} do |f| %>
<div class="form-group">
<%= f.label :"新規投稿", :class => 'control-label' %>
