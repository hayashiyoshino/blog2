<div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 text-center">
<h3>会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="alert alert-danger">
    <%= devise_error_messages! %>
  </div>

  <div class="field">
    <%= f.text_field :nickname, :class => "form-control", placeholder: 'ニックネーム(８文字以内)', autofocus: true, maxlength: "8" %>
  </div>
  <br />

  <div class="field">
    <%= f.email_field :email, :class => "form-control", placeholder: 'メールアドレス', autofocus: true, autocomplete: "email" %>
  </div>
  <br />

  <div class="field">
    <%= f.password_field :password ,:class => "form-control", placeholder: 'パスワード', autocomplete: "off" %>
  </div>
  <br />

  <div class="field">
    <%= f.password_field :password_confirmation, :class => "form-control", placeholder: 'パスワード(確認)', autocomplete: "off" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "登録", :class => "btn btn-primary" %>
  </div>
<% end %>

</div>
<%= render "devise/shared/links" %>
